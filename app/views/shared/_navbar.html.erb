    <div class="<%= (params[:controller] == "countries" && params[:action] == "index") ? "navbar navbar-expand-sm navbar-light navbar-lewagon sticky-navbar fixed-top d-flex justify-content-between" : "navbar navbar-expand-sm navbar-light navbar-lewagon d-flex justify-content-between" %>" style="height:80px">
      <div class="navbar-brand">
        <%= link_to "/", class: "navbar-brand title-navbar" do %>
        <%= image_tag "https://res.cloudinary.com/dgw2hw9oa/image/upload/v1623833526/logo_rmaxvx_dy3bcd.png" %>
          <span class="d-inline travel-color-title">travel colour</span>
        <% end %>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto text-center">
          <% if user_signed_in? %>

            <li class="nav-item active d-flex">
              <% unless current_page?("/flights") %>
                <b><%= link_to "Book Flights", '/flights', class: "nav-link" %></b>
              <% end %>
              <% unless current_page?("/countries/compare") %>
                <b><%= link_to "Compare Countries", "/countries/compare", class: "nav-link" %></b>
              <% end %>
            </li>

            <li class="nav-item d-flex align-items-center dropdown">
              <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
                <%= image_tag "https://res.cloudinary.com/dgw2hw9oa/image/upload/v1623684259/profile-placeholder_u5wyl7.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "My Account", user_path(:id), class: "dropdown-item" %>
                <hr>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li type="button" class="nav-item d-flex">
              <b><%= link_to "Compare Countries", "/countries/compare", class: "nav-link" %> </b>
              <b> <%= link_to "Home", "/", class: "nav-link" %> </b>
              <b> <%= link_to "Login", new_user_session_path, class: "nav-link" %> </b>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
